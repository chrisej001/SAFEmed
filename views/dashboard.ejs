  <title>SafeMed - Patient Dashboard</title>
  <style>
    body { font-family: 'Segoe UI', Arial, sans-serif; margin: 0; padding: 20px; background: #f8f9fa; color: #333; }
    .container { max-width: 1000px; margin: 0 auto; background: white; border-radius: 12px; padding: 30px; box-shadow: 0 10px 30px rgba(0,0,0,0.1); }
    h1 { color: #000000; font-size: 2.5em; margin-bottom: 10px; }
    .patient-id { color: #666; font-size: 1.2em; }
    .allergies { background: #e8f5e9; padding: 10px; border-radius: 8px; font-weight: bold; }
    .alert-banner {
      text-align: center; padding: 20px; margin: 20px 0; font-size: 2.5em; font-weight: bold; color: white; border-radius: 12px;
    }
    .high-risk { background: linear-gradient(135deg, #ff0000, #cc0000); animation: pulse 2s infinite; }
    .medium-risk { background: linear-gradient(135deg, #ff9800, #f57c00); }
    @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.8; } 100% { opacity: 1; } }
    .alert-list { list-style: none; padding: 0; }
    .alert-item {
      padding: 20px; margin: 15px 0; border-radius: 12px; font-size: 1.4em; font-weight: bold; box-shadow: 0 4px 15px rgba(0,0,0,0.1);
    }
    .high { background: #ffebee; border-left: 8px solid #f44336; }
    .medium { background: #fff3e0; border-left: 8px solid #ff9800; }
    table { width: 100%; border-collapse: collapse; margin: 20px 0; }
    th { background: #000000; color: white; padding: 15px; text-align: left; }
    td { padding: 12px 15px; border-bottom: 1px solid #ddd; }
    tr:hover { background: #f5f5f5; }
    .form-section { background: #e8f5e9; padding: 20px; border-radius: 12px; margin: 30px 0; }
    input[type="text"] { width: 70%; padding: 15px; font-size: 1.1em; border-radius: 8px; border: 1px solid #ccc; }
    button { padding: 15px 30px; font-size: 1.1em; background: #000000; color: white; border: none; border-radius: 8px; cursor: pointer; margin-left: 10px; }
    button:hover { background: #333; }
    .webhook-btn { background: #4caf50; margin-top: 20px; }
    .no-alerts { text-align: center; font-size: 1.5em; color: #4caf50; padding: 40px; }
    .ahead-footer { text-align: center; margin-top: 50px; color: #666; font-size: 0.9em; }
  </style>
</head>
